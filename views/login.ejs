<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Login</title>

    <style>
        .auth-wrapper {
            min-height: calc(100vh - 56px); /* navbar height */
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .auth-card {
            width: 100%;
            max-width: 420px;
            border: none;
            border-radius: 14px;
        }

        .auth-title {
            font-weight: 700;
        }

        .form-control,
        .form-control:focus {
            border-radius: 10px;
        }

        .submit-btn {
            border-radius: 10px;
            font-weight: 500;
            padding: 0.6rem;
        }
    </style>
</head>
<body>

    <%- include('./partials/nav') %>

    <div class="auth-wrapper">
        <div class="card auth-card shadow-sm">
            <div class="card-body p-4 p-md-5">

                <!-- Heading -->
                <div class="text-center mb-4">
                    <h2 class="auth-title">Welcome Back</h2>
                    <p class="text-muted">Login to continue</p>
                </div>

                <!-- Error -->
                <% if (locals.error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= locals.error %>
                    </div>
                <% } %>

                <!-- Form -->
                <form action="/user/login" method="post" autocomplete="off">

                    <div class="mb-3">
                        <label for="email" class="form-label fw-semibold">
                            Email address
                        </label>
                        <input 
                            type="email" 
                            class="form-control" 
                            name="email" 
                            id="email"
                            placeholder="Enter your email"
                            required
                        >
                        <div class="form-text">
                            We’ll never share your email with anyone else.
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label fw-semibold">
                            Password
                        </label>
                        <input 
                            type="password" 
                            class="form-control" 
                            name="password" 
                            id="password"
                            placeholder="Enter your password"
                            required
                        >
                    </div>

                    <button type="submit" class="btn btn-primary w-100 submit-btn">
                        Login
                    </button>
                </form>

                <!-- Footer -->
                <div class="text-center mt-4">
                    <small class="text-muted">
                        Don’t have an account?
                        <a href="/user/signUp" class="text-decoration-none">
                            Create one
                        </a>
                    </small>
                </div>

            </div>
        </div>
    </div>

    <%- include('./partials/script') %>
</body>
</html>
